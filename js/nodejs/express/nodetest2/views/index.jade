extends layout

block content
  h1= title
  p Welcome to our test

  // wrapper
  #wrapper
    // user info
    #userInfo
      h2 User Info
      p
        strong Name:&nbsp;
        span(id="userInfoName")
        br
        strong Age:&nbsp;
        span(id="userInfoAge")
        br
        strong Gender:&nbsp;
        span(id="userInfoGender")
        br
        strong Location:&nbsp;
        span(id="userInfoLocation")
        br

    // user list
    h2 User List
    #userList
      table
        thead
          th User name
          th Email
          th Delete?
        tbody
    // /user list
    h2 Add user
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullName(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserGender(type='text', placeholder='gender')
        br
        button#btnAddUser Add user
    // /addUser

  // /wrapper
